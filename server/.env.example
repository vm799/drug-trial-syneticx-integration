# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/medresearch-ai

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Logging
LOG_LEVEL=info

# API Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External APIs (Optional)
PUBMED_API_BASE_URL=https://eutils.ncbi.nlm.nih.gov/entrez/eutils
CLINICALTRIALS_API_BASE_URL=https://clinicaltrials.gov/api

# Email Configuration (Optional - for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Monitoring & Analytics (Optional)
SENTRY_DSN=your-sentry-dsn-here

# Security
ENCRYPTION_KEY=your-32-character-encryption-key
COOKIE_SECRET=your-cookie-secret-here

# Feature Flags
ENABLE_REAL_TIME_VALIDATION=true
ENABLE_PUBMED_INTEGRATION=true
ENABLE_CITATIONS_VERIFICATION=true
ENABLE_AUDIT_LOGGING=true

# Subscription Limits
FREE_TIER_DAILY_LIMIT=20
PREMIUM_TIER_DAILY_LIMIT=200
ENTERPRISE_TIER_DAILY_LIMIT=1000
